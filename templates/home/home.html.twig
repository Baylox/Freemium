{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block content %}
    <!-- Products Section -->
    <section class="container mt-5">
        <h2 class="text-center mb-4">Featured Products</h2>
        
        <div class="row mb-5">
            {% for i in 1..9 %} 
            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Product {{ i }}</h5>
                        <p class="card-text">Lorem ipsum dolor sit amet, consectetur adipiscing elit.</p>
                        <a href="#" class="btn btn-primary">View Details</a>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>

    </section>

    <!-- Testimonials Section -->
    <section class="bg-light py-5">
        <div class="container">
            <h2 class="text-center mb-4">What Our Customers Say</h2>
            <div class="row">
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-body">
                            <p class="card-text">"Great products and excellent customer service!"</p>
                            <h5 class="card-title">- John Doe</h5>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-body">
                            <p class="card-text">"I love shopping here. Always find what I need."</p>
                            <h5 class="card-title">- Jane Smith</h5>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-body">
                            <p class="card-text">"Fast shipping and great prices. Highly recommend!"</p>
                            <h5 class="card-title">- Bob Johnson</h5>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
